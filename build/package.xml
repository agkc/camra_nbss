<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.9.1" version="2.0" xmlns="http://pear.php.net/dtd/package-2.0" xmlns:tasks="http://pear.php.net/dtd/tasks-1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
    http://pear.php.net/dtd/tasks-1.0.xsd
    http://pear.php.net/dtd/package-2.0
    http://pear.php.net/dtd/package-2.0.xsd">
 <name>CamraNbss</name>
 <channel>pear.camranorthherts.org.uk</channel>
 <summary>Campaign for Real Ale National Beer Scoring System</summary>
 <description>Does exactly what it says on the tin</description>
 <lead>
  <name>Andy "Bob" Brockhurst</name>
  <user>b3cft</user>
  <email>andy.brockhurst@b3cft.com</email>
  <active>yes</active>
 </lead>
 <date>@@date@@</date>
 <version>
  <release>@@version@@</release>
  <api>@@version@@</api>
 </version>
 <stability>
  <release>@@stability@@</release>
  <api>@@stability@@</api>
 </stability>
 <license>BSD License</license>
 <notes>http://github.com/b3cft/phpIrcBot</notes>
 <contents>
  <dir name="/">
   <dir name="Camra">
    <dir name="Nbss">
     <file name="Nbss.php" role="php">
      <tasks:replace from="@@PACKAGE_VERSION@@" to="version" type="package-info" />
     </file>
    </dir>
   </dir>
   <dir name="www">
    <file name="index.php" role="www">
      <tasks:replace from="@@PACKAGE_VERSION@@" to="version" type="package-info" />
      <tasks:replace from="@@DATA_DIR@@" to="data_dir" type="pear-config"/>
    </file>
    <dir name="api">
     <file name="index.php" role="www">
      <tasks:replace from="@@PACKAGE_VERSION@@" to="version" type="package-info" />
      <tasks:replace from="@@DATA_DIR@@" to="data_dir" type="pear-config"/>
     </file>
    </dir>
   </dir>
   <dir name="data">
    <file name="nbss.ini" role="data"/>
   </dir>
   <dir name="tests">
     <file name="NbssTest.php" role="test">
      <tasks:replace from="@@PACKAGE_VERSION@@" to="version" type="package-info" />
     </file>
     <dir name="fixtures">
      <file name="dummyConfig.ini" role="test" />
    </dir>
   </dir>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.3.0</min>
   </php>
   <pearinstaller>
    <min>1.9.2</min>
   </pearinstaller>
   <package>
    <name>Autoloader</name>
    <channel>pear.gradwell.com</channel>
    <min>2.0.0</min>
    <max>2.99.999</max>
   </package>
   <package>
    <name>CoreUtils</name>
    <channel>pear.b3cft.com</channel>
    <min>1.0.0</min>
    <max>1.99.999</max>
   </package>
  </required>
  <optional />
 </dependencies>
 <phprelease>
  <filelist>
    <install as="nbss/index.php" name="www/index.php" />
    <install as="nbss/api/index.php" name="www/api/index.php" />
    <install as="nbss.ini" name="data/nbss.ini" />
    <!-- remove the extraneous test directory -->
    <install as="NbssTest.php" name="tests/NbssTest.php" />
    <install as="fixtures/dummyConfig.ini" name="tests/fixtures/dummyConfig.ini" />
  </filelist>
 </phprelease>
 <changelog>
    <release>
      <version>
        <release>@@version@@</release>
        <api>@@version@@</api>
      </version>
      <stability>
        <release>@@stability@@</release>
        <api>@@stability@@</api>
      </stability>
      <date>@@date@@</date>
      <license>New BSD license</license>
      <notes>
@@rel_notes@@
      </notes>
    </release>
 </changelog>
</package>